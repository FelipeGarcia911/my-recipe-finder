{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "noEmit": true,
    "noUnusedLocals": false,
    "strict": true,
    "target": "ES6"
  },
  "exclude": ["node_modules", "public", ".cache"]
}
